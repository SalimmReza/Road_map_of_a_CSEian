<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".advance"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Click On Your Major"
        android:textAlignment="center"
        android:textColor="#039BE5"
        android:textSize="40dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
       android:src="@drawable/aiii"/>
    <TextView
        android:clickable="true"
        android:onClick="AI"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Artificial Intelligence"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/software"/>
    <TextView
        android:clickable="true"
        android:onClick="SE"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Software Engineering"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/networkiii"/>
    <TextView
        android:clickable="true"
        android:onClick="NE"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Network Engineering"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"/>





</LinearLayout>